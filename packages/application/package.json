{
  "name": "@microdrop/application",
  "version": "1.1.32",
  "description": "Top Level Application for Microdrop",
  "main": "index.js",
  "bin": {
    "microdrop-3": "bin/microdrop-3"
  },
  "default-enabled": [
    "device-ui-plugin",
    "state-saver"
  ],
  "scripts": {
    "test": "node _test.js",
    "start": "node index.js",
    "clear:appdata": "./node_modules/.bin/electron clear-data.js",
    "build": "exit 0",
    "rm:node_modules:powershell": "powershell.exe Remove-Item -Force node_modules && powershell.exe Remove-Item -Force ui/src/node_modules;",
    "install:node_modules": "npm install && npm --prefix ui/src install"
  },
  "author": "Sci-Bots",
  "license": "BSD-2-Clause",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@microdrop/device-controller": "^1.1.26",
    "@microdrop/ui": "^1.1.32",
    "@micropede/broker": "^0.0.20",
    "@micropede/client": "^0.0.19",
    "ajv": "^6.0.0-beta.2",
    "argparse": "^1.0.9",
    "backbone": "^1.3.3",
    "express": "^4.16.2",
    "fs-extra": "^5.0.0",
    "handlebars": "^4.0.11",
    "lodash": "^4.17.4",
    "mqtt": "^2.14.0",
    "three": "^0.89.0",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "electron": "^1.7.10",
    "electron-builder": "^19.55.3",
    "electron-mocha": "^5.0.0",
    "webpack": "^3.8.1"
  },
  "build": {
    "appId": "com.sci-bots.microdrop",
    "productName": "Microdrop",
    "copyright": "Copyright Â© 2018 Sci-Bots",
    "nsis": {
      "oneClick": true,
      "perMachine": true
    },
    "fileAssociations": {
      "ext": "microdrop"
    },
    "files": [
      "**/*",
      "index.js"
    ],
    "extraFiles": [
      "index.js",
      "app.js",
      "renderer.js",
      "index.html",
      "models/",
      "ui/",
      "resources/"
    ]
  }
}
