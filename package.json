{
  "description": "Microdrop with MQTT support and Web UI",
  "scripts": {
    "start": "npm run --prefix ./packages/application start",
    "bootstrap": "lerna bootstrap --no-optional && git add packages/**/*/package-lock.json",
    "hoist": "./node_modules/.bin/lerna bootstrap --hoist --no-optional",
    "build": "./node_modules/.bin/lerna run build",
    "test": "./node_modules/.bin/lerna run test",
    "git:add:defaults": "git add package-lock.json && git add packages/**/package-lock.json && git add **/*.web.js && git add **/build/*",
    "upgrade:micropede": "./node_modules/.bin/lerna exec -- ncu -u @micropede/client @micropede/broker"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Lucaszw/microdrop-3.git"
  },
  "keywords": [
    "Microdrop",
    "Web UI"
  ],
  "author": "Sci-Bots",
  "license": "BSD-2-Clause",
  "bugs": {
    "url": "https://github.com/Lucaszw/microdrop-3/issues"
  },
  "homepage": "https://github.com/Lucaszw/microdrop-3#readme"
}
